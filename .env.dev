# Development Environment Variables
# Database
POSTGRES_DB=ecloud_dev
POSTGRES_USER=ecloud_user
POSTGRES_PASSWORD=ecloud_dev_password

# Redis
REDIS_PASSWORD=redis_dev_password

# Django
DJANGO_SECRET_KEY=your-secret-key-for-development-only
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
DEBUG=1

# Frontend
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_WS_URL=ws://localhost:8000/ws

# Stripe Configuration (TEST MODE)
# IMPORTANT: Copy your actual keys to .env.dev.local (not tracked by git)
# Get keys from: https://dashboard.stripe.com/test/apikeys
STRIPE_SECRET_KEY=your_stripe_test_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_test_publishable_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Google OAuth Configuration
# IMPORTANT: Copy your actual credentials to .env.dev.local (not tracked by git)
# Get from: https://console.cloud.google.com/apis/credentials
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id_here
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret_here
