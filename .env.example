# E-Clean Environment Variables Template
# Copy this file to .env.dev.local and fill in your actual values

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database Configuration (PostgreSQL)
POSTGRES_DB=ecloud_dev
POSTGRES_USER=ecloud_user
POSTGRES_PASSWORD=your-postgres-password
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis Configuration (for WebSockets/Caching)
REDIS_URL=redis://:your-redis-password@redis:6379/0
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# Email Configuration (SendGrid SMTP)
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key-here
DEFAULT_FROM_EMAIL=Your App Name <your-verified-email@example.com>

# Frontend URL (for email verification links)
FRONTEND_URL=http://localhost:3000

# Google OAuth Configuration
GOOGLE_OAUTH_CLIENT_ID=your-google-oauth-client-id
GOOGLE_OAUTH_CLIENT_SECRET=your-google-oauth-client-secret

# Stripe Configuration (Payment Processing)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
